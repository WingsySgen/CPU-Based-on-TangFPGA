label main
    mov|im1 40 _ reg2
    mov|im1 80 _ reg3
    mov|im1 50 _ reg4
    mov|im1 90 _ reg5
    call _ _ tft_set_addr
    mov reg2 _ reg6
    label main_for_1
        jg reg6 reg3 main_for_1_end
        mov reg4 _ reg7 
        label main_for_2
            jg reg7 reg5 main_for_2_end
            call _ _ tft_set_color
            add|im2 reg7 1 reg7
            jmp _ _ main_for_2
            label main_for_2_end
        add|im2 reg6 1 reg6
        jmp _ _ main_for_1
        label main_for_1_end
    mov|im1 255 _ reg1
    call _ _ sleep
    jmp _ _ main