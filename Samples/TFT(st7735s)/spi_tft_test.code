#reg0、reg1被sleep占用
#reg11、reg10被spi写函数占用
#reg2、reg3、reg4、reg5用来存放写数据的地址范围
#reg6、reg7用于循环
jmp _ _ init

label init
    call _ _ spi_init
    call _ _ tft_init
    jmp _ _ main

label spi_init
    mov|im1 spi.con _ ioad
    mov|im1 0x80 _ ioc
    mov|im1 spi.flg _ ioad
    mov|im1 1 _ ioc
    ret _ _ _

label spi_wait
    mov|im1 spi.sta _ ioad
    nop _ _ _ 
    nop _ _ _ 
    label spi_wait_1
        and|im2 ioc 0b00100000 reg10
        jne|im2 reg10 0b00100000 spi_wait_1
    ret _ _ _

label spi_wt
    call _ _ spi_wait
    mov|im1 spi.snd _ ioad
    mov reg11 _ ioc
    ret _ _ _

label wt_dat
    call _ _ spi_wait
    mov|im1 tft _ ioad
    mov|im1 1 _ ioc
    call _ _ spi_wt
    ret _ _ _ 

label wt_cmd
    call _ _ spi_wait
    mov|im1 tft _ ioad
    mov|im1 0 _ ioc
    call _ _ spi_wt
    ret _ _ _ 

label func1
    mov|im1 0x05 _ reg11
    call _ _ wt_dat
    mov|im1 0x3c _ reg11
    call _ _ wt_dat
    mov|im1 0x3c _ reg11
    call _ _ wt_dat
    ret _ _ _

